<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/contentBodyColor"
    tools:context=".ProfileConfiguration">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            style="@style/viewParent.headerText"
            android:text="Settings" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="30dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/profileCircleImageView"
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:layout_marginRight="10dp"
                android:background="@drawable/rounded_textview"
                android:gravity="center"
                android:text="P"
                android:textColor="@android:color/white"
                android:textSize="30sp" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/usernameTextView"
                    style="@style/viewParent.headerText"
                    android:gravity="start"
                    android:text="Pedro Maironi Toribio"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/accountTextView"
                    style="@style/viewParent.headerText.settingsSubtitle"
                    android:gravity="start"
                    android:text="Account #:80079571"
                    android:textFontWeight="100"
                    android:textSize="15sp" />

                <!--Here you can create other textViews-->
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="20dp"
            android:orientation="vertical">

            <TextView
                style="@style/viewParent.headerText.settingsMiniTitle"
                android:text="Profile" />


            <Button
                android:id="@+id/EditProfileButton1"
                style="@style/viewParent.headerText.settingsTextIcon"
                android:drawableStart="@drawable/ic_person"
                android:drawableLeft="@drawable/ic_person"
                android:drawableEnd="@drawable/ic_more"
                android:drawableRight="@drawable/ic_more"
                android:text="Edit Profile"
                android:textAppearance="@style/viewParent.headerText.settingsMiniTitle" />


            <TextView
                style="@style/viewParent.headerText.settingsMiniTitle"
                android:text="Actions" />

            <Button
                android:id="@+id/ticket"
                style="@style/viewParent.headerText.settingsTextIcon"
                android:drawableStart="@drawable/ic_ticket"
                android:drawableLeft="@drawable/ic_ticket"
                android:drawableEnd="@drawable/ic_more"
                android:drawableRight="@drawable/ic_more"
                android:text="Ticket"
                android:textAppearance="@style/viewParent.headerText.settingsMiniTitle" />

            <Button
                android:id="@+id/sold"
                style="@style/viewParent.headerText.settingsTextIcon"
                android:drawableStart="@drawable/ic_baseline_monetization_on_24"
                android:drawableLeft="@drawable/ic_baseline_monetization_on_24"
                android:drawableEnd="@drawable/ic_more"
                android:drawableRight="@drawable/ic_more"
                android:text="Sold"
                android:textAppearance="@style/viewParent.headerText.settingsMiniTitle" />

            <Button
                android:id="@+id/void_ticket"
                style="@style/viewParent.headerText.settingsTextIcon"
                android:drawableStart="@drawable/ic_bash"
                android:drawableLeft="@drawable/ic_bash"
                android:drawableEnd="@drawable/ic_more"
                android:drawableRight="@drawable/ic_more"
                android:text="Void ticket"
                android:textAppearance="@style/viewParent.headerText.settingsMiniTitle"
                 />

            <Button
                android:id="@+id/results"
                style="@style/viewParent.headerText.settingsTextIcon"
                android:drawableStart="@drawable/ic_menu"
                android:drawableLeft="@drawable/ic_menu"
                android:drawableEnd="@drawable/ic_more"
                android:drawableRight="@drawable/ic_more"
                android:text="Result"
                android:textAppearance="@style/viewParent.headerText.settingsMiniTitle"
                />


            <Button
                android:id="@+id/winner"
                style="@style/viewParent.headerText.settingsTextIcon"
                android:drawableStart="@drawable/ic_winner"
                android:drawableLeft="@drawable/ic_winner"
                android:drawableEnd="@drawable/ic_more"
                android:drawableRight="@drawable/ic_more"
                android:text="Winner #s"
                android:textAppearance="@style/viewParent.headerText.settingsMiniTitle"
                />

            <Button
                android:id="@+id/winner_tickets"
                style="@style/viewParent.headerText.settingsTextIcon"
                android:drawableLeft="@drawable/ic_check"
                android:drawableStart="@drawable/ic_check"
                android:drawableEnd="@drawable/ic_more"
                android:drawableRight="@drawable/ic_more"
                android:text="Winner ticket"
                android:textAppearance="@style/viewParent.headerText.settingsMiniTitle"
                />


            <TextView
                style="@style/viewParent.headerText.settingsMiniTitle"
                android:text="General" />

            <Button
                android:id="@+id/frequent_amounts"
                style="@style/viewParent.headerText.settingsTextIcon"
                android:drawableStart="@drawable/ic_money"
                android:drawableLeft="@drawable/ic_money"
                android:drawableEnd="@drawable/ic_more"
                android:drawableRight="@drawable/ic_more"
                android:text="Frequent amounts"
                android:textAppearance="@style/viewParent.headerText.settingsMiniTitle" />

            <Button
                android:id="@+id/printer"
                style="@style/viewParent.headerText.settingsTextIcon"
                android:drawableStart="@drawable/ic_printer"
                android:drawableLeft="@drawable/ic_printer"
                android:drawableEnd="@drawable/ic_more"
                android:drawableRight="@drawable/ic_more"
                android:text="Connect printer"
                android:textAppearance="@style/viewParent.headerText.settingsMiniTitle" />


            <Button
                android:id="@+id/statement"
                style="@style/viewParent.headerText.settingsTextIcon"
                android:drawableStart="@drawable/ic_finger"
                android:drawableLeft="@drawable/ic_finger"
                android:drawableEnd="@drawable/ic_more"
                android:drawableRight="@drawable/ic_more"
                android:text="Statement"
                android:textAppearance="@style/viewParent.headerText.settingsMiniTitle"
                 />

            <Button
                android:id="@+id/logout"
                style="@style/viewParent.headerText.settingsTextIcon"
                android:layout_marginBottom="1dp"
                android:drawableStart="@drawable/ic_power"
                android:drawableLeft="@drawable/ic_power"
                android:drawableEnd="@drawable/ic_more"
                android:drawableRight="@drawable/ic_more"
                android:text="Log out"
                android:textAppearance="@style/viewParent.headerText.settingsMiniTitle"
                android:textSize="16sp" />


        </LinearLayout>

    </LinearLayout>

</ScrollView>